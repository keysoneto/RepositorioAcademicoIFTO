@model CursoViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Curso";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="EditarCurso">
            <div class="form-group mb-4">
                <input type="hidden" asp-for="Id"/>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" value="@Model.Nome"/>
            </div>
            @{
                if(@Model.Ativo)
                {
                    <div class="form-group mb-4">
                    <input asp-for="Ativo" type="radio" value="true" checked/>Ativo
                    <br />
                    <input asp-for="Ativo" type="radio" value="false" />Inativo
                    </div>
                }
                else if(!@Model.Ativo)
                {
                    <div class="form-group mb-4">
                    <input asp-for="Ativo" type="radio" value="true" />Ativo
                    <br />
                    <input asp-for="Ativo" type="radio" value="false" checked/>Inativo
                    </div>
                }
            }
            
            <div class="col-md-6 mb-4">
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="Logo" class="custom-file-input" id="customFile">
                    </div>
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section scripts{  
    <script type="text/javascript">  
        // Add the following code if you want the name of the file appear on select  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>  
}  
