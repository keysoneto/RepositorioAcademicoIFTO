<!DOCTYPE html>
<html lang="pt-br" style="height: 100vh;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Repositorio Academico IFTO</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RepositorioAcademico.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css" />
</head>
<style>
.rodape p {
    margin: 5px;
    padding: 0;
}
</style>
<body style="height: 100vh;">
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="../../images/logo.png" class="d-inline-block align-text-top" />
                </a>
                <h3>Repositório Acadêmico</h3>
                <div class="d-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://www.ifto.edu.br/araguaina" target="_blank">Site Institucional</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-lg-flex" style="height:100%;width:95%">
        <div class="d-flex align-items-start flex-column" style="width: 25%;">
            <div class="mb-auto p-2">
                <vc:listacursos></vc:listacursos>
            </div>
            <div class="rodape p-2 text-center" style="margin-bottom: 30px">
                <p><strong>Biblioteca Victor Hugo Aragão de Oliveira</strong></p>
                <p>Av. Amazonas, Quadra 56, Lote 01 - Setor Cimba, Araguaína - TO, 77826-170 </p>
                <p>biblioteca.araguaina@ifto.edu.br</p>
                <p>(63) 3411-0315</p>
            </div>
        </div>
        <main role="main" style="width:80%">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>